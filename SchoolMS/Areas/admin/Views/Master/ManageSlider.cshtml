    @{
    ViewBag.Title = "ManageSlider";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Slider List</h2>
            <a href="#slider-modal" class="btn btn-primary pull-right newslider" data-toggle="modal" data-target=".slider-modal"><i class="fa fa-plus"></i> New Slider</a>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <table id="SliderList" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th width="1%"></th>
                        <th>Description</th>
                        <th>Slider Image</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<div class="modal fade slider-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Slider Configuration</h4>
            </div>
            <div class="modal-body">
                <form action="/admin/master/SaveSlider" method="post" class="frmSlider">
                    <div class="col-md-12">
                        <div class="col-md-6 col-sm-6 col-xs-6 form-group">
                            <input type="hidden" id="SliderConfigId" name="SliderConfigId" />
                            <label for="SliderImage">Slider Image</label>
                            <span class="red">*</span>
                            <input type="file" id="Files" name="Files" onchange="FileSelected(this)" accept="image/*" />
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-6 form-group">
                            <img src="" width="200" height="200" class="imgSliderImage"/>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="col-md-12 col-sm-12 col-xs-12 form-group">
                            <label for="Grade">Description</label>
                            <textarea class="form-control" id="Description" name="Description" placeholder="Enter Slider Description"></textarea>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success btnSaveSlide">Save</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Areas/admin/PageScripts/Slider/SliderList.js"></script>

