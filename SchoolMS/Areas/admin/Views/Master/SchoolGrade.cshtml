
@{
    ViewBag.Title = "School Grades";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>School Grades</h2>
            <a href="#grade-modal" class="btn btn-primary pull-right newgrade" data-toggle="modal" data-target=".grade-modal"><i class="fa fa-plus"></i> New Grade</a>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <table id="GradeList" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th width="1%"></th>
                        <th>Grade Name</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<div class="modal fade grade-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Grade</h4>
            </div>
            <div class="modal-body">
                <form action="/admin/master/SaveGrade" method="post" class="frmGrade">
                    <div class="col-md-12 col-sm-12 col-xs-12 form-group">
                        <input type="hidden" id="GradeId" name="GradeId" />
                        <label for="Grade">Name</label>
                        <span class="red">*</span>
                        <input class="form-control" id="Grade" name="Grade" placeholder="Enter Grade Name" required="required" type="text">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success btnSaveGrade">Save</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Areas/admin/PageScripts/Grade/GradeList.js"></script>