
@{
    ViewBag.Title = "ManageGeneralSetting";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>General Settings</h2>
            @*<a href="#slider-modal" class="btn btn-primary pull-right newslider" data-toggle="modal" data-target=".slider-modal"><i class="fa fa-plus"></i> New General Setting</a>*@
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <table id="GSList" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Field Value</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<div class="modal fade gs-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">General Settings</h4>
            </div>
            <div class="modal-body">
                <form action="/admin/master/SaveGeneralSetting" method="post" class="frmGS">
                    <div class="col-md-12 col-sm-12 col-xs-12 form-group">
                        <input type="hidden" id="GeneralSettingId" name="GeneralSettingId" />
                        <label for="FieldValue">Field Value</label>
                        <span class="red">*</span>
                        <input class="form-control" id="FieldValue" name="FieldValue" placeholder="Enter Field Value" required="required" type="text">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success btnSaveGS">Save</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Areas/admin/PageScripts/GeneralSetting/GeneralSetting.js"></script>